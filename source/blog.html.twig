{% block content %}
<h1>Blog</h1>

{% if data.posts %}
  <ul>
    {% for post in data.posts %}
      <li><a href="{{ post.url }}">{{ post.title }}</a></li>
    {% endfor %}
  </ul>
{% endif %}
{% endblock %}

